{
	"manifest_version": 2,
	"name": "Lean Japanese",
	"version": "0.0.1",

	"icons": { 
		"32": "img/torii-32.png"
		
	},
	
	"browser_action": {
		"default_icon": {
			"16": "images/torii-32.png",
			"24": "images/torii-32.png",
			"32": "images/torii-32.png"
		},
		"default_title": "Google Mail"
	},
	
	"permissions": [
		"background",
		"tabs",
		"<all_urls>",
		"storage",
		"declarativeContent",
		"contextMenus",
			"*://*/*",
		"http://jp.giaiphapict.loc/api/kanjiword"
	],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Opens hello.html"
		}
	},

	"background": {
		"scripts": ["background/main.js","background/context-menu.js","background/icon.js"],
		"persistent": false
	},

	"web_accessible_resources": ["style.css"]
	,"content_scripts": [
		{
			"all_frames": true,
			"run_at": "document_idle",
			"matches": [
				"*://j-dict.com/*"
			],
			"js": ["js/lib/jquery-3.3.1.min.js","js/common.js","js/j-dict/common.js"]			
		},

		{
			"all_frames": true,
			"js": ["js/lib/jquery-3.3.1.min.js","js/j-dict/common.js","js/j-dict/kanji.js"],
			"matches": [
				"*://j-dict.com/kanji.htm"
			],
			"run_at": "document_idle"
		},

		{
			"all_frames": true,
			"js": ["js/lib/jquery-3.3.1.min.js","js/kanji/com_j-dict.word.js"],
			"matches": [
				"*://j-dict.com/?keyword=*"
			],
			"run_at": "document_idle"
		},

		{
			"all_frames": true,
			"js": ["js/j-dict/grammar.js"],
			"matches": [
				"*://j-dict.com/grammar*"
			],
			"run_at": "document_idle"
		},

		{
			"all_frames": true,
			"js": ["js/lib/jquery-3.3.1.min.js","js/common.js","js/mazii/mina.js"],
			"matches": [
				"*://mina.mazii.net/*"
			],
			"run_at": "document_idle"
		}

	]
}